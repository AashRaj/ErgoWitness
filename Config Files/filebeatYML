# filebeat config
# filebeat.yml

filebeat:
  registry_file: /var/lib/filebeat/registry
  config_dir: /etc/filebeat/conf.d

output.logstash:
  hosts: ["localhost:5044"]
~

# Bro Conf for filebeat
# conf.d/bro.yml

filebeat.prospectors:
- input_type: log
  paths:
    - /usr/local/bro/logs/current/*.log
  fields:
    sensorID:
    sensorType: networksensor
  document_type: bro
~


# Snort conf for filebeat
# conf.d/snort.yml

filebeat.prospectors:
- input_type: log
  paths:
    - /var/log/snort/snort.alert
  fields:
    sensorID: $result
    sensorType: networksensor
document_type: snort
